<script type="text/javascript">

    function searchClick() {
        $('#isActive').combo({
            editable: false,
            panelHeight: 45
        });
        $('#dlg-search').dialog('open').dialog('setTitle', '查询');
    };

    function select() {
        var queryParams = $('#details').datagrid('options').queryParams;
        queryParams.JobCode = $('#JobCode').val();
        queryParams.JobName = $('#JobName').val();
        queryParams.IsActive = $('#isActive').combo('getValue');
        $('#details').datagrid('options').queryParams = queryParams;
        $('#details').datagrid({
            pageNumber: 1,
            pageSize: 10
        }); 
        $("#details").datagrid('reload');
        $('#dlg-search').dialog('close'); 
    }

</script>

<div id="dlg-search" class="easyui-dialog" modal="true" style="width:350px;height:210px;padding:2px 2px"
		closed="true" buttons="#dlg-buttons-search">
    <div class="easyui-layout" fit="true">
		<div region="center" border="false" style="padding:10px 10px;background:#fff;border:1px solid #ccc; " >   
            <table width="300">
                      <tr>
                        <td width="60">岗位编码:</td>
                        <td width="168"><input id="JobCode" type="text"/>
                        <input name="ID"  style="display:none" /></td>
                        
                      </tr>
                        <tr>
                        <td width="60">岗位名称：</td>
                        <td width="168"><input id="JobName" type="text"/></td>
                      </tr>                      
                      <tr>
                      <td width="60">是否可用：</td>
                        <td><select id="isActive" class="easyui-combobox" required="true" style="width: 80px">
                                <option value="">请选择</option>
		                        <option value="1">可用</option>
		                        <option value="0">不可用</option>
	                        </select>
	                    </td>
                      </tr>
                    </table>
        </div>
    </div>
</div>
<div id="dlg-buttons-search">
	<a href="#" class="easyui-linkbutton" iconCls="icon-ok" onclick="select()">查询</a>
	<a href="#" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg-search').dialog('close')">取消</a>
</div>
