<script type="text/javascript">
function editClick() {
    var row = $('#details').datagrid('getSelected');
    if (row) {
        $('#dlg').dialog('open').dialog('setTitle', '编辑');
        $('#LowerLimitfm').form('load', row);   
        $('#LowerLimitfm .easyui-validatebox').validatebox({
            required: true
        });
        if (row.IsActive == '可用') {
            $('#IsActiveCc').combo('setValue', 1).combo('setText', row.IsActive);
        } else {
            $('#IsActiveCc').combo('setValue', 0).combo('setText', row.IsActive);
        }
        $('#IsActiveCc').combo({
            hasDownArrow: true
        });
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");    
        url = '/SortingLowerLimit/Edit/';
    } else {
        $.messager.alert('错误', '没有选择行！');
    }
};
</script>
   