<script type="text/javascript">
function editClick() {
    var row = $('#details').datagrid('getSelected');
    if (row) {
        $('#dlg').dialog('open').dialog('setTitle', '编辑');
        $('#fm .easyui-validatebox').validatebox({
            required: true
        });
        $('#fm').form('clear');
        $('#fm').form('load', row);
        if (row.IsLock == '是') {
            $('#c1').combo('setValue', true).combo('setText', row.IsLock);
        } else {
            $('#c1').combo('setValue', false).combo('setText', row.IsLock);
        }
        if (row.IsAdmin == '是') {
            $('#c2').combo('setValue', true).combo('setText', row.IsAdmin);
        } else {
            $('#c2').combo('setValue', false).combo('setText', row.IsAdmin);
        }
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");
        $('#c1').combo({
            hasDownArrow: true
        });
        $('#c2').combo({
            hasDownArrow: true
        });
        url = '/User/Edit/?UserID=' + row.UserID;
    } else {
        $.messager.confirm('错误', '没有选择行！');
    }
};
</script>
   