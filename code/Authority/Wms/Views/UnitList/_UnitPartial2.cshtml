<script type="text/javascript">

    function UnitQueryClick() {
        $('#dlg-Unitsearch').dialog('open').dialog('setTitle', '查询单位信息');
        $("input[type=text]").attr("value", "");
    };

    function unitSave2() {
        var unitRow = $('#unitDetail2').datagrid('getSelected');
        if (unitRow) {
            $('#unitCode02').val(unitRow.UnitCode);
            $('#unitName02').val(unitRow.UnitName);
            $('#unitData2').dialog('close');
        }
    }
</script>
<div id="unitData2" class="easyui-dialog" modal="true" style="width: 500px; height: 500px;
    padding: 0px 0px" closed="true" buttons="#dlgUnit-buttons">
    <div split="true" border="false" style="width: 486px; height: 430px">
        <table id="unitDetail2" class="easyui-datagrid" border="false" 
        @*toolbar="#btn-query3"*@
            singleselect="true" fit="true" fitcolumns="true" pagination="true" rownumbers="true">
            <thead>
                <tr>
                    <th field="UnitCode" width="80">
                        计量单位编码
                    </th>
                    <th field="UnitName" width="80">
                        计量单位名称
                    </th>
                    <th field="COUNT" width="80">
                        支数
                    </th>
                    <th field="IsActive" width="80">
                        是否可用
                    </th>
                    <th field="UpdateTime" width="80">
                        更新时间
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div id="dlgUnit-buttons">
    <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="unitSave2()">确定</a> 
    <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#unitData2').dialog('close')">
        取消</a>
</div>
