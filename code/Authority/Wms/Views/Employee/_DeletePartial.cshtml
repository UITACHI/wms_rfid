<script type="text/javascript">
function deleteClick() {
    var row = $('#details').datagrid('getSelected');
    if (row) {
        url = '/Employee/Delete/?demployeeId=' + row.ID;
        $('#fm').form('load', row);
        $('#dlg').dialog('open').dialog('setTitle', '删除');
        $('#fm .easyui-validatebox').validatebox({
            required: false
        });
        $('#isActive_emp').combo({
            hasDownArrow: false
        });
        if (row.IsActive == '可用') {
            $('#isActive_emp').combo('setValue', 1).combo('setText', row.IsActive);
        } else {
            $('#isActive_emp').combo('setValue', 0).combo('setText', row.IsActive);
        }
        $('form input').attr("disabled", "disabled");
        $('form textarea').attr("disabled", "disabled");
    } else {
        $.messager.alert('错误', '没有选择行！');
    }
};
</script>
